# Environment
MCP_ENV=development  # development, staging, or production

# Security
MCP_MAX_FILE_SIZE=104857600  # 1000MB (1GB)
MCP_WORKSPACE_DIRS=/path/to/presentations
MCP_ENFORCE_WORKSPACE_BOUNDARY=true

# Performance
MCP_ENABLE_CACHE=true
MCP_CACHE_SIZE=100

# Logging
MCP_LOG_LEVEL=INFO
MCP_ENABLE_STRUCTURED_LOGGING=false
MCP_LOG_FILE=~/logs/mcp-server.log

# Azure audio transcription (alias SPEECH_*)
AUDIO_ENDPOINT=https://your-resource.cognitiveservices.azure.com
AUDIO_DEPLOYMENT=gpt-4o-mini-transcribe
AUDIO_KEY=your-audio-key
AUDIO_API_VERSION=2024-10-21


