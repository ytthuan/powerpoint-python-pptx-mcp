# Environment
MCP_ENV=development  # development, staging, or production

# Security
MCP_MAX_FILE_SIZE=1048576000  # 1000MB (1GB)
MCP_WORKSPACE_DIRS=/path/to/presentations
MCP_ENFORCE_WORKSPACE_BOUNDARY=true

# Performance
MCP_ENABLE_CACHE=true
MCP_CACHE_SIZE=100

# Logging
MCP_LOG_LEVEL=INFO
MCP_ENABLE_STRUCTURED_LOGGING=false
MCP_LOG_FILE=logs/mcp-server.log

# Azure AI (for automated note processing)
AZURE_AI_PROJECT_ENDPOINT=https://...
MODEL_DEPLOYMENT_NAME=gpt-4
